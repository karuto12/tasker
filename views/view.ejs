<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View</title>
    <link rel="stylesheet" type="text/css" href="/stylesheets/view_style.css">
</head>
<body>
    <div class="">
        <div id="nav">
            <a href="/">Home</a>
            <a href="/register">Sign Up</a>
            <a href="/login">Log In</a>
            <a href="/about">About</a>
            <a href="/contact">Contact</a>
        </div>
        <div id="content">
            <div id="usersheader">
                <h2>Users:</h2>
            </div>
            <div id="userspanel">
                <% if(users.length == 0) { %> 
                    <p>No users found</p>
                <% } else { %>
                <% users.forEach( (user) => { %>
                    <div class="user">
                        <img src="<%= user.image %>" alt="<%= user.name %>" width="100" height="100">
                        <h3><%= user.name %></h3>
                        <h4><%= user.email %></h4>
                        <h4><%= user.uname %></h4>
                        <a href="/edit/<%= user._id %>">Edit</a>
                        <a href="/delete/<%= user._id %>">Delete</a>
                    </div>
                <% }) %>
                <% } %>
            </div>
        </div>
    </div>
</body>
</html>